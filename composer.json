{
    "name": "hampel/validate",
    "description": "Simple validator library composer package",
	"homepage" : "https://bitbucket.org/hampel/validate",
	"authors": [{
		"name": "Simon Hampel",
		"email": "simon@hampelgroup.com",
		"role": "Developer"
	}],
	"support": {
		"issues": "https://bitbucket.org/hampel/validate/issues",
		"source": "https://bitbucket.org/hampel/validate/src"
	},
	"keywords": [
		"validation"
	],
	"license" : [
		"MIT"
	],
    "require": {
        "php": ">=7.2.0"
    },
	"require-dev": {
		"phpunit/phpunit": "^8.0|^9.0"
	},
    "suggest": {
		"hampel/validate-laravel": "Extends Laravel validation service with some of the validation functions from this library",
		"hampel/tlds": "Retrieve TLDs directly from IANA or other sources; extends Laravel validation service with domain name and TLD validation"
    },
    "autoload": {
        "psr-4": {
            "Hampel\\Validate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hampel\\Validate\\": "tests/"
        }
	}
}